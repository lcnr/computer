# fn cond_exit(0) -> 0
# fn cond_exit(3) -> 6
# fn cond_exit(7) -> 28
# fn cond_exit(100) -> 5050

fn cond_exit(a: u32) -> u32 {
    let b = 0;
    loop {
        match a < 1 {
            t: True -> break Empty,
            f: False -> Empty,
        }: Empty | Never;

        b = b + a;
        a = a - 1;
    }: Empty;

    b
}